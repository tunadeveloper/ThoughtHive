@model List<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int count = 0;
}

<h2>Hakkımda</h2>
<table class="table table-striped">
    <tr style="background-color: lightgrey">
        <th>#</th>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>başlık</td>
            <td><a href="/AdminCategory/DeleteCategory/" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="/AdminCategory/UpdateCategory/" class="btn btn-success">Aktif Et</a></td>
        </tr>

    }
</table>


@Html.Action("AboutPartial", "About")