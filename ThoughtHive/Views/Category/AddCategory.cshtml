@model EntityLayer.Concrete.Category
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddCategory</title>
</head>
<body>
    <div> 
        <h2>kategori ekleme</h2>
        <br />
            @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.Label("Kategori Adı")
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CategoryName)
                    <br />
                    @Html.Label("Açıklama")
                    @Html.TextBoxFor(x => x.CategoryDesription, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CategoryDesription)
                <br />
                    <button class="btn btn-success">Kaydet</button>
                </div>
            }
    </div>
</body>
</html>
