@model List<EntityLayer.Concrete.Heading>
@{
    ViewBag.Title = "MyHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    string color = "";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .badge-lg {
            font-size: 0.9rem; 
            padding: 0.5em 0.75em; 
            border-radius: 0.5rem;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">

            <div class="card-body p-0">
                <table class="table table-hover projects">
                    <thead>
                        <tr style="background-color: lightsteelblue;">
                            <th style="width: 1%; color: white">
                                #
                            </th>
                            <th style="width: 20%; color: white">
                                Başlık Adı
                            </th>
                            <th style="width: 15%; color: white">
                                Oluşturan Yazar
                            </th>

                            <th style="width: 8%; color: white" class="text-center">
                                Kategori
                            </th>

                            <th style="width: 25%">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.HeadingID
                                </td>
                                <td>
                                    <a>
                                        <b>
                                            @item.HeadingName
                                        </b>
                                    </a>
                                    <br />
                                    <small>
                                        @Convert.ToDateTime(item.HeadingDate).ToString("dd/MM/yyyy")
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>

                                <td class="project-state">
                                    <span class="badge badge-warning" style="min-width: 80px">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/WriterPanel/ContentByHeading/@item.HeadingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        İçerik
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/WriterPanel/EditHeading/@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/WriterPanel/PassiveHeading/@item.HeadingID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>

</html>
<a href="/WriterPanel/NewHeading" style="background-color:rosybrown;color:white" class="btn btn-default">Yeni Başlık Girişi</a>

